<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/akinator_nav_graph"
    app:startDestination="@id/fragmentAskMe">

    <fragment
        android:id="@+id/fragmentAskMe"
        android:name="com.afkoders.musicakinator.presentation.search.SearchFragment"
        tools:layout="@layout/fragment_search"
        android:label="FragmentAskMe" >
        <action
            android:id="@+id/navigateToFoundSong"
            app:destination="@id/fragmentFoundSong"
            app:enterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_right" />
    </fragment>

    <fragment
        android:id="@+id/fragmentFoundSong"
        android:name="com.afkoders.musicakinator.presentation.search.SearchFragment"
        tools:layout="@layout/fragment_search"
        android:label="FragmentAskMe">
    <action
        android:id="@+id/navigateToGameResult"
        app:destination="@id/fragmentGameResult"
        app:enterAnim="@anim/enter_from_right"
        app:popExitAnim="@anim/exit_to_right" />
    </fragment>

    <fragment
        android:id="@+id/fragmentGameResult"
        android:name="com.afkoders.musicakinator.presentation.search.SearchFragment"
        tools:layout="@layout/fragment_search"
        android:label="FragmentAskMe" />

</navigation>

